<div class="section">

  <%= simple_form_for @post do |f| %>

  <div class="field">
    <div class="control">

      <%= f.input :title, input_html: { class: 'input'}, wrapper: false, label_html: {class: 'label'} %>

    </div>
  </div>

  <div class="field">
    <div class="control">

      <%= f.input :author, input_html: { class: 'input'}, wrapper: false, label_html: {class: 'label'} %>

    </div>
  </div>

  <div class="field">
    <div class="control">

      <%= f.input :body, input_html: { class: 'textarea'}, wrapper: false, label_html: {class: 'label'} %>

    </div>
  </div>


  <%= f.button :submit, 'update post', class: "button is-info" %>

  <% end %>

</div>
